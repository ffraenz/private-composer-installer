{
  "name": "ffraenz/private-composer-installer",
  "description": "A composer install helper for private packages",
  "type": "composer-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Fr√§nz Friederes",
      "email": "fraenz@frieder.es",
      "homepage": "https://fraenz.frieder.es"
    }
  ],
  "keywords": [
    "composer",
    "plugin",
    "env",
    "private",
    "wordpress",
    "wp"
  ],
  "require": {
    "php": "^7.4",
    "composer-plugin-api": "^1.0 || ^2.0",
    "vlucas/phpdotenv": "^4.0"
  },
  "require-dev": {
    "composer/composer": "^1.0 || ^2.0",
    "laminas/laminas-coding-standard": "^1.0",
    "symfony/phpunit-bridge": "^5.1"
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "vendor/bin/simple-phpunit --verbose",
    "test-coverage": "vendor/bin/simple-phpunit --coverage-clover clover.xml"
  },
  "autoload": {
    "psr-4": {
      "FFraenz\\PrivateComposerInstaller\\": "src/PrivateComposerInstaller"
    }
  },
  "extra": {
    "class": "FFraenz\\PrivateComposerInstaller\\Plugin"
  }
}
